<div class='post-form'>
  <h3>Add a Post</h3>
  <form action='/post' method='post'>
    <div>
      <label for='title'>
        Title:
      </label>
      <input type='text' name='title' id='title' />
    </div>
    <div>
      <label for='post_content'>Post Content: </label>
      <input type='text' name='post_content' id='post_content' />

    </div>
    <input type='submit' value='Add Post' />
  </form>
</div>